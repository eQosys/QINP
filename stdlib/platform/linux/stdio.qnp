\\ QINP Standard Library
\\ Standard Input/Output - Linux Specific

import "../../fileio.qnp"

space std:
	define __STDIN (File*)0
	define __STDOUT (File*)1
	define __STDERR (File*)2



defer
space std:
	fn<i32> printn(u8 const* str, u64 num)!:
		return fwrite(__STDOUT, str, num)

	fn<i32> scann(u8* dest, u64 num)!:
		const result = fread(__STDIN, dest, num)
		if result >= 0:
			dest[result] = 0
		return result