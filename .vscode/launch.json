{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Unix) Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/QINP",
            "args": [ "-v", "-k", "-r", "-e=examples/_symbols.json", "-c=examples/_comments.json", "-i=stdlib/", "-o=/tmp/qinp-out.out", "examples/test.qnp" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/QINP.exe",
            "args": [ "-v", "-k", "-r", "-e=exampes/_symbols.json", "-c=examples/_comments.json", "-i=stdlib/", "examples/test.qnp" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        }
    ]
}