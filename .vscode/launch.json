{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Unix) Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/qinp",
            "env": {
                "QINP_STDLIB": "./stdlib/"
            },
            "args": [ "-v", "-k", "-r", "-e=examples/_symbols.json", "-c=examples/_comments.json", "-o=/tmp/qinp-out.out", "examples/shift_test.qnp", "-a=host/QINP.qnp" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/QINP.exe",
            "args": [ "-v", "-k", "-r", "-e=examples/_symbols.json", "-c=examples/_comments.json", "examples/hello.qnp" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "(Unix) GDB64",
            "type": "gdb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "stopOnEntry": false,
            "preLaunchTask": "asm64"
        }
    ]
}