fn<?T> normalize(?T val) [T, Tnormalized]:
	var<Tnormalized> temp = val
	return temp

std.print("Normalized: %\n", normalize(<i64, i8>, 10000))

fn<?T> limit(?T val) [T, min, max]:
	if val < min:
		return min
	elif val > max:
		return max
	return val

fn<?T> limit(?T val, ?T min, ?T max):
	if val < min:
		return min
	elif val > max:
		return max
	return val

